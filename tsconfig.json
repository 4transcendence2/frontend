{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@main/*": ["pages/main/*"],
      "@chatList/*": ["pages/chatList/*"],
      "@gameList/*": ["pages/gameList/*"],
      "@chatRoom/*": ["pages/chatRoom/*"],
      "@gameRoom/*": ["pages/gameRoom/*"],
      "@signIn/*": ["pages/signIn/*"],
      "@signUp/*": ["pages/signUp/*"],
      "@auth/*": ["pages/auth/*"],
      "@unAuth/*": ["pages/unAuth/*"],
      "@leftSide/*": ["components/leftSide/*"],
      "@rightSide/*": ["components/rightSide/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
