{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@unauth/*": ["pages/unauth/*"],
      "@page/*": ["pages/auth/*"],
      "@leftSide/*": ["components/leftSide/*"],
      "@rightSide/*": ["components/rightSide/*"],
      "@centerHeader/*": ["components/centerHeader/*"]
      // "@style/*": ["style/*"],
      // "@api/*": ["api/*"],
      // "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
